{
  "increment": "conventional:angular",
  "scripts": {
    "beforeStage": "yarn run changelog && git add CHANGELOG.md"
  },
  "git": {
    "addUntrackedFiles": false,
    "commitMessage": "chore: release %s",
    "commitArgs": "-S --no-verify",
    "tagArgs": "-s",
    "commitMessage": "chore: release ${version}"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publishPath": ".",
    "tag": "latest",
    "private": false,
    "access": null
  }
}
